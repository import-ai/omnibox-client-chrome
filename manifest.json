{
    "manifest_version": 3,
    "name": "HTML Reader Extension",
    "version": "0.1.0",
    "description": "Reads the rendered HTML and sends it to a web service API.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }